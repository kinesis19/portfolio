---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 모든 프로젝트 파일들의 경로를 미리 생성함
export async function getStaticPaths() {
    const projects = await getCollection('projects');
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

// Props 타입 정의
interface Props {
    project: CollectionEntry<'projects'>;
}

// 데이터 받기
const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={project.data.title}>
    <main class="max-w-3xl mx-auto p-8 pt-20">
        <a href="/portfolio/" class="text-neutral-500 hover:text-white mb-8 block">← Back to Main</a>
        
        <div class="mb-10">
        <h1 class="text-4xl font-bold text-white mb-4">{project.data.title}</h1>
        <div class="flex flex-wrap gap-2 mb-4">
            {project.data.tags.map((tag) => (
            <span class="px-2 py-1 bg-neutral-800 text-emerald-400 rounded text-xs border border-neutral-700">
                {tag}
            </span>
            ))}
        </div>
        <p class="text-neutral-400 text-lg">{project.data.description}</p>
        </div>

        <hr class="border-neutral-800 mb-10" />

        <article class="prose prose-invert prose-lg max-w-none text-neutral-300">
        <Content />
        </article>
    </main>
</Layout>